<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table>
  <thead>
    <tr>
      <th>Origin airport</th>
      <th>Destination airport</th>
      <th>Departure date</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= form_with url: new_booking_path, method: :get , local: true do |f| %>
    <% @flights.each do |flight| %>
      <tr>
        <td>
          <%= f.label "flight_id_#{flight.id}" do %>
          <%= f.radio_button :flight_id, flight.id, checked: @flights.first == flight %> 
          <% end %>
        </td>
        <td><%= flight.origin_airport %></td>
        <td><%= flight.destination_airport %></td>
        <td><%= flight.departure_date %></td>
        <td><%= flight.cost %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= f.submit 'Continue to Book', class: 'btn-success' %>
<% end %>

<br>

<%= link_to 'New Flight', new_booking_path %>
