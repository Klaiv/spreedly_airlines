<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Flight</th>
      <th>Amount</th>
      <th>Payment token</th>
      <th>Save credit card</th>
      <th>Pmd</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.flight_id %></td>
        <td><%= booking.amount %></td>
        <td><%= booking.payment_token %></td>
        <td><%= booking.save_credit_card %></td>
        <td><%= booking.pmd %></td>
        <td><%= booking.email %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>
