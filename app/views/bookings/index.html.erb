<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Flight</th>
      <th>Amount</th>
      <th>Credit Card on File</th>
      <th>Receiver</th>
      <th>Email</th>
      <th>Date Purchased</th>
      
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
    <%
      @selected_flight = Flight.find(booking.flight_id)
    %>
      <tr>
        <td><%= @selected_flight.origin_airport %> - <%= @selected_flight.destination_airport %> </td>
        <td>$<%= (booking.amount)/100 %></td>
        <td><%= booking.save_credit_card %></td>
        <td><%= booking.pmd %></td>
        <td><%= booking.email %></td>
         <td><%= booking.created_at.strftime('%d-%b-%Y at %H:%M %p' ) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

