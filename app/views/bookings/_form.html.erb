<%= form_for @booking  do |form| %>
  <% if booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
        <% booking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>

            </h4>
            <ul class="list-group mb-3 ">
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        
                        <small class="text-muted">Brief description</small>
                    </div>
                    <span class="text-muted">$<%=@selected_flight.cost%></span>
                </li>

                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (USD)</span>
                    <strong id="amount">$<%=@selected_flight.cost%></strong>
                </li>
            </ul>
     
        </div>
        <div class="col-md-8 order-md-1">
          
                <div class="row">
                    <div class="col-md-6 mb-3">
                     
                    </div>
                </div>

                <div class="mb-3">
                    <label for="email">Email </label>
                    
                    
                        <%= form.email_field :email , {:class => 'form-control'}%>
                    <div class="invalid-feedback"> Please enter a valid email address for shipping updates. </div>
                </div>
            
                <div class="custom-control custom-checkbox">
                  
                    <%= form.check_box :save_credit_card, {:class => 'custom-control-input'} %>
                    <label class="custom-control-label" for="save_credit_card">Save this information for next time</label>
                </div>
                <hr class="mb-4">
                <h4 class="mb-3">Payment</h4>
                <div class="d-block my-3">
                    <div class="custom-control custom-radio">
                         <%= form.check_box :pmd, {:class => 'custom-control-input'} %>
                        <label class="custom-control-label" for="pmd">Credit card</label>
                    </div>
                </div>

                <hr class="mb-4">
                <%= form.hidden_field :payment_token %>
                <%= form.hidden_field :amount, :value => @selected_flight.cost %>
                <%= form.hidden_field :flight_id, :value => @selected_flight.id %> 
                <button class="btn btn-primary btn-lg btn-block" type="button" onclick="initializeSpreedly()">Continue to checkout</button>
            
        </div>
    </div>
<% end %>
